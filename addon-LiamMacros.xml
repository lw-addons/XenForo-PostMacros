    <template title="macros" version_id="30401" version_string="3.4.1"><![CDATA[<xen:require css="macros.css" />

<xen:title>{xen:phrase macros}</xen:title>
<xen:description>{xen:phrase post_macros}</xen:description>

<xen:if is="{$canUseMacros}">
	<xen:set var="$newMacroButton"><a href="{xen:link 'macros/new'}" class="callToAction"><span>{xen:phrase new_macro}</span></a></xen:set>
	<xen:topctrl>{xen:raw $newMacroButton}</xen:topctrl>
	<xen:set var="$macroOptions"><a href="{xen:link 'macros/options'}" style="width: 100%" class="callToAction OverlayTrigger"><span>{xen:phrase macros_options}</span></a></xen:set>
	{xen:raw $macroOptions}
</xen:if>

<xen:foreach loop="$macros" value="$macro">

	<ol class="section sectionMain">

		<div class="subHeading">
			<h3 class="nodeTitle">
				{$macro.name} <xen:if is="{$macro.staff_macro}"><xen:if is="{$visitor.user_id} == {$macro.userid}"> - {xen:phrase macros_own_staff_macro}<xen:else /> - {xen:phrase macros_other_macro, 'name={$macro.username}'}</xen:if></xen:if>
			</h3>
		</div>

		<div class="primaryContent">
			<p class="muted">{xen:phrase macros_thread_title}: {xen:raw $macro.thread_title}</p>
		</div>

		<div class="primaryContent">
			{xen:raw $macro.macro}
		</div>

		<div class="sectionFooter macroControls">
			<xen:if is="{$macro.candelete}"><span><a href="{xen:link 'macros/delete', $macro}" class="OverlayTrigger">{xen:phrase delete_macro}</a></span></xen:if>
			<xen:if is="{$macro.canedit}"><span><a href="{xen:link 'macros/edit', $macro}" class="OverlayTrigger">{xen:phrase edit_macro}</a></span></xen:if>
			
			<xen:if is="!{$macro.canedit} && !{$macro.candelete}">
				<i>{xen:phrase controls_not_available}</i>
			</xen:if>
		</div>

	</ol>

</xen:foreach>

<xen:if is="{$adminmacros}">
	<div class="titleBar macroHeader">
		<h1>{xen:phrase admin_macros}</h1>
		<p id="pageDescription" class="muted baseHtml">{xen:phrase admin_macros_description}</p>
	</div>

	<xen:foreach loop="$adminmacros" value="$name">
		<ol class="section sectionMain">
	
			<div class="subHeading">
				<h3 class="nodeTitle">
					{$name.name}
				</h3>
			</div>
	
			<div class="primaryContent">
				<p class="muted">{xen:phrase macros_thread_title}: {xen:raw $name.thread_title}</p>
			</div>
			
			<div class="primaryContent">
				{xen:raw $name.content}
			</div>
	
			<div class="sectionFooter macroControls">
				<i>{xen:phrase controls_not_available}</i>
			</div>
	
		</ol>
	</xen:foreach>

</xen:if>]]></template>
